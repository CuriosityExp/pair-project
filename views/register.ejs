<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('css') %>
    <title>Register Form</title>
</head>
<body>
    <div class="container">
        <div class="row mt-5 mb-1 p-5">
            <h1>Register Form</h1>
            <% if (errors?.length>0) { %>
                <div class="row mt-2 mb-2">
                    <% errors.split(',').forEach(err=> { %>
                    <div class="col-auto">
                        <div class="card">
                            <div class="card-body text-danger">
                                    <%= err %>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            <% } %>
            <form action="/register" method="post">
                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input name="email" type="email" class="form-control" placeholder="e.g: awesome@email.com">
                </div>
                <div class="mb-3">
                    <label for="fullname" class="form-label">Fullname</label>
                    <input name="fullname" type="text" class="form-control" placeholder="e.g: Daniel Elisandro">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" type="password" class="form-control" placeholder="e.g: secretpassword">
                </div>
                <div class="row p-2">
                    <div class="col-auto">
                        <input class="btn btn-primary" type="submit" value="Submit">
                    </div>
                    <div class="col-auto">
                        <p>Sudah punya akun? Langsung <a href="/login">Login</a> aja</p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>